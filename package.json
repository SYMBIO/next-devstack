{
    "description": "SYMBIO Next.js Devstack",
    "version": "0.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/SYMBIO/next-devstack"
    },
    "license": "MIT",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "dev": "lerna run dev --stream --parallel",
        "graphql-codegen": "lerna run graphql-codegen",
        "prepublish": "lerna run prepublish",
        "publish-canary": "lerna version prerelease --preid canary --force-publish && release --pre --skip-questions",
        "publish-stable": "lerna version --force-publish",
        "relay": "lerna run relay"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.5",
        "@elastic/elasticsearch": "^7.17.0",
        "@symbio/cms": "canary",
        "@symbio/cms-datocms": "canary",
        "@symbio/headless": "canary",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.13",
        "@types/relay-runtime": "^12.0.2",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.13.0",
        "axios": "^0.26.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.3",
        "babel-plugin-relay": "^12.0.0",
        "dayjs": "^1.10.8",
        "env-cmd": "^10.1.0",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.2",
        "hls.js": "^1.1.5",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lerna": "^4.0.0",
        "lint-staged": "^12.3.4",
        "next": "canary",
        "prettier": "^2.5.1",
        "relay-runtime": "^12.0.0",
        "release": "6.3.0",
        "slugify": "^1.6.5",
        "ts-jest": "^27.1.3",
        "typescript": "4.5.5"
    },
    "lint-staged": {
        "*/**/*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "react",
            "@typescript-eslint",
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:prettier/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "rules": {},
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "name": "next-devstack"
}
